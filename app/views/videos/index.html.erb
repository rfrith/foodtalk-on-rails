<div id="video-list" class="content-section2 pb-5 pt-3" >
  <div class="d-flex justify-content-center mx-auto">
    <div class="media align-items-center">
      <%= image_tag 'videos-icon-sm.png', class: 'd-flex d-sm-none d-md-block mt-4 ml-5', alt: 'Videos Icon', style: 'width: auto; height: 6rem;' %>
      <div class="media-body ml-4">
        <span class="content-section-title">FoodTalk Videos</span>
        <p class="content-section-copy-dark mr-5">Watch to increase your knowledge of food & nutrition!</p>
      </div>
    </div>
  </div>
  <div class="grid pt-4" style="margin: 0 auto;">
    <% @videos.each do |video| %>
      <%= render :partial => "videos/video_card", locals: {video: video, card_width: '20rem;'} %>
    <% end %>
  </div>
</div>