<div id="better-u-lessons-started" class="pt-2">
  <div class="media">
    <div class="media-body">
      <span><%= image_tag 'better-u-logo.png', class: 'align-middle', alt: 'Better U Logo', style: 'width: 4rem; height: auto;' %></span>
      <span class="pb-2 lead">
        <% if user_has_completed_curriculum?(@current_user, LearningModules::BETTER_U) %>
          Great job! You have completed Food Talk Better U.
        <% else %>
          <% if(!@current_user.course_enrollments.better_u.started.empty?) %>
            <%=t("dashboard.my_courses.started.continue_learning")%>
          <% else %>
            <%=t("dashboard.my_courses.started.start_learning")%>
          <% end %>
        <% end %>
      </span>
    </div>
  </div>
  <div class="pt-3 better-u-started-grid">
    <% if(!@current_user.course_enrollments.better_u.started.empty?) %>
      <% @current_user.course_enrollments.better_u.started.each do |c| %>
        <% if LearningModules::find_module(c.name) %>
          <%= render :partial => 'learn_online/learning_module_media_object', locals: {lesson: LearningModules::find_module(c.name), my_css: 'modules-grid'} %>
        <% end %>
      <% end %>
    <% elsif (find_next_lesson(LearningModules::BETTER_U)) %>
      <%= render :partial => 'learn_online/learning_module_media_object', locals: {lesson: LearningModules::find_module(find_next_lesson(LearningModules::BETTER_U)), my_css: 'modules-grid'} %>
    <% end %>
  </div>
</div>