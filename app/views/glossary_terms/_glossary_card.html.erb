<div class="card glossary-card <%= local_assigns[:css] %>">
  <div class="card-header">
    <span class="h4">
    <%= term.name %>
    </span>
  </div>

  <div class="card-body d-flex flex-row align-items-center">
    <% if !term.image.blank? %>
      <div class="glossary-image float-left">
        <%= image_tag term.image, class: 'card-img-top', alt: term.name %>
      </div>
    <% end %>
    <div class="card-title glossary-description-copy glossary-description text-left">
      <%= term.description %>
    </div>
  </div>

  <div class="card-footer text-muted">
    <blockquote>
      <footer class="blockquote-footer">
        <cite title="Source Title"><%= term.source %></cite>
        <small class="text-muted">
          <% if !term.image.blank? %>
            <%= link_to 'Original Image', term.remote_image_url, target: '_blank' %>
          <% end %>
        </small>
      </footer>
    </blockquote>
  </div>
</div>