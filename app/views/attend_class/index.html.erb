<div id="attend-class" class="content-section2">
  <div class="row no-gutters align-items-center jumbotronz jumbotron-fluidz pt-0 pb-0" style="background-color: white;">
    <div class="col content-section-copy-dark-med pl-5 pr-5" style="min-width: 50%;">

      <%= image_tag("foodtalk-class-2.jpg", class: 'img-fluid pull-left mr-4', alt: "Food eTalk Live Classroom", style: 'max-height: 16rem; width: auto;') %>

      <div class="content-section-title align-bottom mt-2 mb-2"><%= t("attend_a_class.name") %></div>
      <p class="text-justify"><%= t("attend_a_class.description_html") %></p>
    </div>
  </div>

  <div class="grid" style="margin: 0 auto;">
    <%
      CountyAgents::COUNTIES.each do |key, values|
    %>
      <div class="grid-item mb-4">

        <div class="card m-1 " style="width: 18rem; height: auto;">
          <div class="card-title ml-3 mt-2">
            <%= values[:name] %>
          </div>
          <div class="card-body">

            <address>
              <%= values[:address1] %><br>
              <% if(!values[:address2].empty?) %>
                <%= values[:address2] %><br>
              <% end %>
              <%= values[:city] %> <%= values[:state] %> <%= values[:zip] %><br>
              <%= link_to values[:phone], "tel:#{values[:phone]}" %>
            </address>

            <p class="lead"><%= t("attend_a_class.snap_ed_supervisor") %></p>
            <div class="media">
              <% image_tag(values[:snap_ed_supervisor][:photo_url], class: 'rounded mr-2', alt: "#{key.capitalize} #{t('attend_a_class.snap_ed_supervisor')}", style: 'height: auto; width: 4rem;') %>
              <div class="media-body mr-4 ">
                <div class="small card-text text-justify mb-2">
                  <%= values[:snap_ed_supervisor][:name]%><br>
                  <%= mail_to values[:snap_ed_supervisor][:email] %>
                </div>
              </div>
            </div>

            <% if(!values[:program_assistants].empty?) %>
              <p class="lead pt-2"><%= t("attend_a_class.program_assistants") %></p>
              <% values[:program_assistants].each do |pas| %>
                <div class="media mb-2">
                  <% image_tag(pas[:photo_url], class: 'rounded mr-2', alt: "#{key.capitalize} #{ t('attend_a_class.snap_ed_supervisor').singularize }", style: 'height: auto; width: 4rem;') unless (pas[:photo_url].empty?)%>
                  <div class="media-body mr-4 ">
                    <div class="small card-text text-justify mb-2">
                      <%= pas[:name]%><br>
                      <%= mail_to pas[:email] %>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>

        </div>

      </div>
    <%
      end
    %>
  </div>

</div>