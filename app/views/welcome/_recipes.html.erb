<div id="featured-recipes" class="content-section">
  <div class="d-flex justify-content-center">
    <div class="media pt-4 pl-4 pr-4 align-items-center">
      <%= image_tag 'recipe-graphic-sm.png', class: 'd-none d-md-block mr-4', alt: 'Recipe Card Icon', style: '' %>
      <div class="media-body">
        <span class="content-section-title">Featured Recipes</span>
        <p class="content-section-copy-light">Check out these delicious, healthy, & inexpensive meals!</p>
      </div>
    </div>
  </div>

  <div class="mx-auto card-deckz recipes-deck w-100">
    <div class="grid">
      <%
        #recipes = Recipe.order(created_at: :desc).last(3)
        #recipes = Recipe.order(created_at: :asc).last(3)
        recipes = Recipe.limit(3).order("RANDOM()")
        recipes.each do |recipe| %>
        <div class="grid-item">
          <%= render :partial => "recipes/recipe_card", locals: {recipe: recipe, styles: '', detail_view: false} %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="content-section-copy-light recipe-copy text-center pt-4 pb-4">
    <%= link_to "View All Recipes", recipes_path %>
  </div>
</div>