<div class="white-bg">
  <%= render partial: "shared/post_title_block", locals: {inverse: false, icon: icon, title: title, description: description}%>
</div>

<div class="flex-row no-gutters sticky-top white-bg">
  <div class="flex-col d-flex justify-content-center">
    <div class="text-center">
      <div class="flex-col d-flex justify-content-center categories-title">
        <%= t("header.categories") %>
      </div>

      <% base_css = 'badge mb-1 ml-1 border border-secondary' %>
      <% #TODO: I18N ME!!!! "All Posts" %>
      <%= link_to "All Posts", eval("#{index_path}"), class: base_css + (@all_posts ? ' btn-primary' : ' btn-light'), role: 'button' %>

      <% if slugs %>
        <% slugs.each do |s| %>
          <%= link_to s["name"], eval("#{index_path}" + '(slug: s["slug"])'), class: base_css + ((@slug && (s["slug"] == @slug)) ? ' btn-primary' : ' btn-light'), role: 'button' %>
        <% end %>
      <% end %>

      <%= form_with id: "wp-search", local: false, class: "form-inline" do |f| %>
          <div class="input-group mt-1">
            <%= f.label(:s, search_label, class: "ml-2") %>
            <%= f.text_field(:s, class: "ml-2 form-control form-control-sm rounded-left", placeholder: t("forms.search_terms")) %>
            <span class="input-group-append">
              <%= f.submit(t("forms.search_submit"), class: "mr-2 btn btn-sm btn-primary") %>
            </span>
          </div>
      <% end %>
    </div>
  </div>

  <%= render partial: "shared/scroll_down_for_more" %>

</div>