<%= render partial: 'shared/fancybox_bootstrap_fix' %>

<% if policy(:site_access).view_default_index? %>

  <%= render 'welcome/header' %>

  <% if policy(:site_access).view_blog? %>
    <% if @blogs %>
      <%= render partial: "blogs" %>
    <% end %>
  <% end %>

  <% if policy(:site_access).view_recipes? %>
    <% if @recipes %>
      <%= render partial: "recipes" %>
    <% end %>
  <% end %>

  <% if policy(:site_access).view_videos? %>
    <% if @videos %>
      <%= render partial: "videos" %>
    <% end %>
  <% end %>

<% end %>


