<%
  #TODO: move into different layout files & choose which to use in controller
  #
  # https://stackoverflow.com/questions/3025784/rails-layouts-per-action/21203783#21203783
  #
  if action_name == :index.to_s
%>

  <% content_for :header do %>
    <style>
      .lity-iframe .lity-container {
        max-width: 80vw;
        padding: 0;
        margin: 0;
      }
      .lity-iframe-container {
        padding-top: 50%;
      }
    </style>
    <%= render 'layouts/top-nav' %>
  <% end %>

  <% content_for :content do %>
    <%= yield %>
  <% end %>

  <% content_for :footer do %>
    <%= render 'layouts/footer' %>
  <% end %>

  <%= render template: 'layouts/application' %>
<% else %>
  <%= render template: 'layouts/simple_layout' %>
<% end %>