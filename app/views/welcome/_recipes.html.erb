<div id="recipes" class="content-section row">
  <div class="col">

    <div class="d-flex justify-content-center mx-auto content-section-item">
      <div class="media content-section-header">
        <%= image_tag 'logo-med.png', class: 'd-flex d-sm-none d-md-block', alt: 'FoodTalk.org Logo' %>
        <div class="media-body ml-3">
          <span class="content-section-title">Featured Recipes</span>
          <p class="content-section-copy-light">Healthy, Delicious, Affordable!</p>
        </div>
      </div>
    </div>



    <div id="recipesCarousel" class="carousel slide" data-ride="carousel"  data-interval="false">

      <div class="carousel-inner" role="listbox">
        <%
          #TODO: FIX ME!  We want Featured Recipes Here
          #TODO: AJAXIFY ME!
          #TODO: put me in a helper
          per_page = 3
          total_pgs = Recipe.page(1).per(per_page).total_pages
          total_pgs_to_show = 2
          i = 1
          while i <= total_pgs_to_show && i <= total_pgs
            @recipes = Recipe.page(i).per(per_page)
        %>
            <div class="carousel-item <%= 'active' if i == 1%>">
              <%= render :partial => "recipes/list_recipes" %>
            </div>
        <%
          i += 1
          end
        %>

        <div class="carousel-item">
          <div class="d-flex mx-auto justify-content-center content-section-item">
            <div class="card-deck recipes-deck">

              <div class="recipe-card card text-center">

                <%= link_to image_tag('apples-grapes.png', class: 'card-img-top', alt: 'Apple & Grape Salad Cap'), '/recipes/index', {"data-vbtype"=>'iframe', "data-autoplay"=>'true', "class"=>'venobox'} %>


                <div class="card-block">
                  <h4 class="card-title align-items-center">Apple & Grape Salad <small class="text-muted"><a href="#"><%= fa_icon "star" %></a> <a href="#"><%= fa_icon "share-alt" %></a></small></h4>
                  <p class="card-text">Farmers Market Recipe:<br>Apple & Grape Salad</p>
                  <p class="card-text">Category <small class="text-muted">Less than $5 meals, Fast & Easy</small></p>
                </div>
                <div class="align-items-center mb-3">
                  <%= link_to("Details", { controller: "recipes", action: "index"}, data: { vbtype: "iframe", autoplay: true }, class: "venobox btn btn-primary") %>
                </div>
              </div>

              <div class="recipe-card card text-center">

                <%= link_to image_tag('classic-banana-bread.jpg', class: 'card-img-top', alt: 'Classic Banana Bread Cap'), '/recipes/index', {"data-vbtype"=>'iframe', "data-autoplay"=>'true', "class"=>'venobox'} %>


                <div class="card-block">
                  <h4 class="card-title align-items-center">Classic Banana Bread <small class="text-muted"><a href="#"><%= fa_icon "star-o" %></a> <a href="#"><%= fa_icon "share-alt" %></a></small></h4>
                  <p class="card-text">Farmers Market Recipe:<br>Classic Banana Bread</p>
                  <p class="card-text">Category <small class="text-muted">Breakfast, Healthy Desserts</small></p>
                </div>
                <div class="align-items-center mb-3">
                  <%= link_to("Details", { controller: "recipes", action: "index"}, data: { vbtype: "iframe", autoplay: true }, class: "venobox btn btn-primary") %>
                </div>
              </div>

              <div class="recipe-card card text-center">

                <%= link_to image_tag('fried-rice.jpg', class: 'card-img-top', alt: 'Famous Fried Rice Cap'), '/recipes/index', {"data-vbtype"=>'iframe', "data-autoplay"=>'true', "class"=>'venobox'} %>

                <div class="card-block">
                  <h4 class="card-title align-items-center">Famous Fried Rice <small class="text-muted"><a href="#"><%= fa_icon "star-o" %></a> <a href="#"><%= fa_icon "share-alt" %></a></small></h4>
                  <p class="card-text">Farmers Market Recipe:<br>Famous Fried Rice</p>
                  <p class="card-text">Category <small class="text-muted">Less than $5 meals</small></p>
                </div>
                <div class="align-items-center mb-3">
                  <%= link_to("Details", { controller: "recipes", action: "index"}, data: { vbtype: "iframe", autoplay: true }, class: "venobox btn btn-primary") %>
                </div>
              </div>
            </div>
          </div>
        </div>


        <a class="carousel-control-prev" href="#recipesCarousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>

        <a class="carousel-control-next" href="#recipesCarousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

    </div>

    <div class="justify-content-center mx-auto content-section-item">
      <div class="content-section-copy-light recipe-copy text-center">
        Our FoodTalk recipes contain delicious, healthy, and inexpensive meal ideas for your whole family to enjoy!<br><%= link_to "Click Here", recipes_path %> to browse our entire catalog.
      </div>
    </div>

    <% render partial: "welcome/scroll-down-for-more" %>

  </div>

</div>
