<% notifications = get_notifications %>
<% if notifications %>
<script language="JavaScript">
    $(document).on("turbolinks:load", function() {
        iziToast.destroy();
        <% notifications.each do |n| %>
            iziToast.<%=n['type']%>({
              title: '<%= n['title'] %>',
              message: '<%= n['message'].html_safe %>',
              target: '#notifications',
              timeout: <%= n['timeout'] %>
            });
        <% end %>
    });
</script>
<% end %>