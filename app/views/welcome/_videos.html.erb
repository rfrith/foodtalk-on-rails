<div id="featured-videos" class="content-section2">
  <div class="d-flex justify-content-center">
    <div class="media pt-4 pl-4 pr-4 align-items-center">
      <%= image_tag 'videos-icon-sm.png', class: 'd-none d-md-block mr-4', alt: 'Videos Icon', style: '' %>
      <div class="media-body">
        <span class="content-section-title"><%= t("welcome.videos.title") %></span>
        <p class="content-section-copy-dark"><%= t("welcome.videos.description") %></p>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <div class="card-group better-u-card-deck d-flex mx-auto mt-4">
      <% @videos["items"].last(4).each do |video| %>
        <%= render partial: "videos/video_card", locals: {video: video} %>
      <% end %>
    </div>
  </div>
  <div class="content-section-copy-dark recipe-copy text-center pt-4 pb-4">
    <%= link_to t("navigation.view_all_videos"), videos_path %>
  </div>
</div>