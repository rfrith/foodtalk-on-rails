<% if collection %>

  <%= render partial: 'shared/post', collection: collection, cached: true, locals: {index_path: "recipes_path", show_path: "show_recipe_path", slugs: slugs, post_slugs: "post['tags']"} %>

<% else %>
  <div class="d-flex justify-content-center">
    <div class="media align-items-center mt-4 ml-5 mr-5">
      <%= t("recipes.error")%>
    </div>
  </div>
<% end %>