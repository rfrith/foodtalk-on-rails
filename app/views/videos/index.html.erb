<div class="container-fluid">
  <div id="video-list" class="row d-flex justify-content-center content-section2 pt-3 pb-5">
    <div class="d-flex flex-column pl-5 pr-5">
      <div class="d-flex justify-content-center mx-auto">
        <div class="media align-items-center">
          <%= image_tag 'videos-icon.png', class: 'd-sm-none d-md-block mt-3 mr-3', alt: 'Videos Icon', style: 'width: auto; height: 6rem;' %>
          <div class="media-body ml-4">
            <span class="content-section-title">FoodTalk Videos</span>
            <p class="content-section-copy-dark mr-5">Watch our FoodTalk videos to increase your knowledge of food & nutrition!</p>
          </div>
        </div>
      </div>

      <div id="grid" class="grid pt-5" style="margin: 0 auto;">
        <% @videos.each do |video| %>
          <%= render :partial => "videos/video_card", locals: {video: video, card_width: '20rem;'} %>
        <% end %>
      </div>

      <div class="mb-3">&nbsp;</div>

    </div>
  </div>
</div>
