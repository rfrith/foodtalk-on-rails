<% #cache "recent-blog-posts", :expires_in => 1.day do %>
<div id="featured-blogs" class="content-section2">
  <div class="d-flex justify-content-center">
    <div class="media pt-4 pl-4 pr-4 align-items-center">
      <%= image_tag 'blog-icon-med.png', class: 'd-none d-md-block mr-4', alt: 'Recipe Card Icon', style: '' %>
      <div class="media-body">
        <span class="content-section-title"><%= t("welcome.blog.title") %></span>
        <p class="content-section-copy-dark"><%= t("welcome.blog.description") %></p>
      </div>
    </div>
  </div>
  <div class="grid">
    <% @blogs.first(3).each do |blog| %>
      <%= render partial: 'blogs/blog_card', locals: {blog: blog} %>
    <% end %>
  </div>
  <div class="content-section-copy-light recipe-copy text-center pt-4 pb-4">
    <%= link_to t("navigation.view_all_blog_posts"), blogs_index_path %>
  </div>
</div>
<% #end %>