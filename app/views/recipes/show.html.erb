<% cache "recipe-#{@title.parameterize.underscore}", :expires_in => 1.week do %>

<div id="recipe-post" class="content-section2">

  <% if @show_categories %>
    <%= render partial: 'shared/post_header', cached: true, locals: {title: t("recipes.name.name"), description: t("recipes.description"), index_path: "recipes_index_path", search_label: t("recipes.search")} %>
  <% end %>

  <div class="p-4">
    <% if @featured_image && !@embedded_content%>
      <%= image_tag(@featured_image, class: 'rounded img-fluid float-right ml-4', alt: @post["title"]["rendered"]) %>
    <% end %>

    <% if !@embedded_content%>
    <span class="content-section-title"><%== @title %></span>
    <% end %>

    <%== filter_content_for_display(@content) %>

    <%= t("social_media_prompt") %>
    <br>
    <%= render partial: "layouts/social_media_links", locals: { should_show_facebook: true, should_show_twitter: false, should_show_gplus: false, should_show_youtube: true, should_show_pinterest: false, should_show_instagram: true, should_show_email: false } %>

  </div>
</div>

<% end %>