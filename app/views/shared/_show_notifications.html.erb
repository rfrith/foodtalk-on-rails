<% notifications = get_notifications %>

<script language="JavaScript">


    $(document).on("turbolinks:load", function() {

    <% if notifications %>

      <% notifications.each do |n| %>

        <% if(n['type']) != :popup %>
          iziToast.<%=n['type']%>({
            target: '#notifications',
            message: '<%= n['message'].html_safe %>',
        <% else %>
          iziToast.show({
              message: '<%= link_to(n['message'].html_safe, "/blog?category=save-money", id: "my-popup-link") %>',
              color: '#fbec64',
              image: '<%= image_url("logo-sm.png", class: "img-fluid m-0 p-0", alt: "FoodTalk.org: Helping Georgians Eat Healthy & Get Moving") %>',
              layout: '2',
              transitionIn: 'bounceInDown',
              close: true,
              closeOnClick: false,
        <% end %>
            title: '<%= n['title'] %>',
            timeout: <%= n['timeout'] %>
          });
      <% end %>

    <% else %>
      iziToast.destroy();
    <% end %>

    });

</script>

