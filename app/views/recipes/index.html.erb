<div id="recipes" class="content-section pb-5 pt-3">
  <div class="d-flex justify-content-center mx-auto">
    <div class="media align-items-center">
      <%= image_tag 'recipe-graphic.png', class: 'd-flex d-sm-none d-md-block mt-4 ml-5', alt: 'Recipe Card Icon', style: 'width: auto; height: 6rem;' %>
      <div class="media-body ml-4">
        <span class="content-section-title">FoodTalk Recipes</span>
        <p class="content-section-copy-light mr-5">Healthy. Delicious. Affordable.  Our FoodTalk recipes contain healthy & inexpensive meal ideas!</p>
      </div>
    </div>
  </div>
  <div class="text-center pt-3">
    <%
      base_css = 'btn btn-sm mb-1 ml-1'
    %>
    <%= link_to "All Recipes", recipes_path, class: base_css + (@all_recipes ? ' btn-light' : ' btn-primary'), role: 'button' %>

    <% if (current_user && !current_user.recipes.empty?) %>
      <%= link_to "My Favorites", recipes_path(favorites: true), class: base_css + (@favorites ? ' btn-light' : ' btn-primary'), role: 'button' %>
    <% end %>

    <% Category.all.each do |c| %>
      <%= link_to c.name, recipes_path(category_id: c.id), class: base_css + ((@category_id && Integer(c.id) == Integer(@category_id)) ? ' btn-light' : ' btn-primary'), role: 'button' %>
    <% end %>
  </div>
  <div class="grid pt-4" style="margin: 0 auto;">
    <%= render :partial => "recipes/list_recipes" %>
  </div>
</div>