<% content_for :header do %>
  <div class="d-inline d-md-none fixed-top">
    <%= render partial: 'layouts/top-nav'%>
  </div>
  <%= render 'layouts/header' %>
<% end %>

<% content_for :content do %>
  <div class="d-none d-md-inline sticky-top">
    <%= render partial: 'layouts/top-nav', :locals => { css: 'sticky-top' } %>
  </div>
  <%= yield %>
<% end %>

<% content_for :footer do %>
  <%= render 'layouts/footer' %>
<% end %>

<%= render template: 'layouts/application' %>