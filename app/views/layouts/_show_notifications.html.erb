<script language="JavaScript">
    $(document).on("turbolinks:load", function() {
        iziToast.destroy();
        <% @notifications.each do |n| %>
        iziToast.info({
            title: '<%= n.title %>',
            message: '<%= n.message.html_safe %>',
            target: '#notifications',
            timeout: <%= n.timeout %>
        });
        <% end %>
    });
</script>