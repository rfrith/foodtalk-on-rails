<a id="<%= glossary_term.name.slice(0).upcase %>"/>

<div class="d-flex justify-content-center">
  <div class="card glossary-card w-100 mb-3">
    <div class="card-header d-none d-md-block">
    <span class="h4">
    <%= glossary_term.name %>
    </span>
    </div>
    <div class="card-body d-flex flex-row align-items-center">
      <% if !glossary_term.image.blank? %>
        <div class="glossary-image float-left">
          <%= image_tag glossary_term.image, class: 'card-img-top', alt: glossary_term.name %>
        </div>
      <% end %>
      <div class="card-title glossary-description-copy glossary-description text-left">

        <div class="h4 d-block d-md-none">



          <div class="h4 d-block d-md-none">
            <u><%= glossary_term.name %></u> - <%= glossary_term.description.downcase %>
            <div class="blockquote-footer d-none">
              <cite title="Source Title" class="text-sm text-muted"><%= glossary_term.source %></cite>
            </div>


          </div>
        </div>

        <span class="h4 d-none d-md-block">
          <%= glossary_term.description %>
        </span>
      </div>
    </div>
    <div class="card-footer text-muted ml-3 mr-3">
      <blockquote>
        <footer class="blockquote-footer">
          <cite title="Source Title"><%= glossary_term.source %></cite>
        </footer>
      </blockquote>
    </div>
  </div>
</div>