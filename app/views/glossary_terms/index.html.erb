<div id="glossary" class="container-fluid">
  <div class="row content-section2 d-flex justify-content-center">
    <div class="d-flex flex-column">
      <div class="d-flex flex-row justify-content-center mx-auto mt-3">
        <div class="media align-items-center">
          <%= image_tag 'glossary-icon.png', class: 'd-sm-none d-md-block mt-3 mr-3', alt: 'Videos Icon', style: 'width: 6rem; height: auto;' %>
          <div class="media-body ml-2">
            <span class="content-section-title">Food Glossary</span>
            <div class="content-section-copy-dark">Enhance your food preparation knowledge!</div>
          </div>
        </div>
      </div>

      <div class="text-center mt-4">
        <% ("a".."z").each { |letter|
        %>
            <%= link_to letter.upcase, "##{letter.upcase}", class: 'btn btn-sm btn-primary mb-1', role: 'button' %>
        <% } %>
      </div>

      <div class="d-flex justify-content-center mx-auto content-section-item">
        <div class="mt-3">

          <% current_letter = "" %>
          <% @glossary_terms.each do |term| %>
              <%
                if (current_letter != term.name.first.upcase)
                  current_letter = term.name.first.upcase
                end
              %>
              <a id="<%= term.name.first.upcase %>"/>

              <div class="card glossary-card">
                <div class="card-header">
                  <span class="h4">
                  <%= term.name %>
                  </span>
                </div>

                <div class="card-body d-flex flex-row align-items-center">
                  <% if !term.image_remote_origin.blank? %>
                      <div class="glossary-image float-left">
                        <%= image_tag term.image_remote_origin, class: 'card-img-top', alt: term.name %>
                      </div>
                  <% end %>
                  <div class="card-title lessons-copy glossary-description">
                    <%= term.description %>
                  </div>
                </div>

                <div class="card-footer text-muted">
                  <blockquote class="blockquote mb-0">
                    <footer class="blockquote-footer">
                      <cite title="Source Title"><%= term.source %></cite>
                      <small class="text-muted">
                        <% if !term.image_remote_origin.blank? %>
                            <%= link_to 'Original Image', term.image_remote_origin, target: '_blank' %>
                        <% end %>
                      </small>
                    </footer>
                  </blockquote>
                </div>
              </div>

              <div class="d-flex justify-content-center pb-3" style="font-size: 3rem;">
                <%= link_to fa_icon("arrow-circle-o-up"), "#glossary" %>
              </div>
          <% end %>


          <div class="mb-5">&nbsp;</div>

        </div>
      </div>
    </div>
  </div>
</div>
