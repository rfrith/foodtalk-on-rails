<div id="header" class="d-flex hero">

  <div class="d-none d-md-block">

    <%= image_tag 'logo-xl.png', class: 'logo img-fluid', alt: "FoodTalk.org: Helping Georgians Eat Healthy & Get Moving" %>

    <span class="d-flex justify-content-center pt-4">
    <% if (!current_user) %>
        <% link_to fa_icon("user") + " Login", login_url, class: "badge badge-success hero-subtitle" %>
    <% else %>
        <% link_to( fa_icon('user') + " My Dashboard", { controller: "dashboard", action: "show" }, class: "badge badge-success hero-subtitle") %>
        &nbsp;
        <% link_to "Logout", "/logout", class: "badge badge-success hero-subtitle" %>
    <% end %>
    </span>
  </div>

  <div class="hero-content">
    <div class="d-md-none">
      <%= image_tag 'logo-lg.png', class: 'img-fluid mt-3', alt: "FooTalk.org Logo", style: 'padding: 0; margin: 0;' %>
    </div>
    <p class="hero-title text-justify">Helping Georgians Eat Healthy & Get Moving!</p>
    <p class="hero-copy text-justify">
      FoodTalk.org has been made especially for Georgians who want FREE ideas on how to keep their families healthy by making nutritious food choices on a budget!
    </p>
    <div>
      <% form_with(url: '/search') do |f| %>
        <% f.label(:q, "Search for:") %>
        <% f.text_field(:q, id: :q) %>
        <% f.submit("Search") %>
      <% end %>

      <div class="hero-subtitle mr-2">Subscribe to our Newsletter for Free Nutrition Tips!</div>
      <%= form_with url: newsletter_sign_up_url, remote: true, class: "form-inline" do |f| %>
        <div class="input-group">
          <%= f.text_field(:email, class: "form-control", placeholder: "Enter Your Email Here") %>
          <div class="input-group-append">
            <%= f.submit("Sign Up!", class: "btn btn-primary") %>
          </div>
        </div>
      <% end %>

    </div>
    <p class="scroll-down-for-more pt-3 d-flex align-items-center">
      <%= fa_icon "arrow-circle-o-down" %> <span class="pl-3 pr-3">Scroll down for more</span> <%= fa_icon "arrow-circle-o-down" %>
    </p>
  </div>
</div>