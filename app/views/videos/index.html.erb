<div class="container-fluid">
  <div id="video-list" class="row d-flex justify-content-center content-section2 pt-3 pb-5">
    <div class="d-flex flex-column pl-5 pr-5">
      <div class="d-flex justify-content-center mx-auto">
        <div class="media align-items-center">
          <%= image_tag 'videos-icon.png', class: 'd-sm-none d-md-block mt-3 mr-3', alt: 'Videos Icon', style: 'width: auto; height: 6rem;' %>
          <div class="media-body ml-3">
            <span class="content-section-title">FoodTalk Videos</span>
            <div class="content-section-copy-dark">Watch our FoodTalk videos to increase your knowledge of food & nutrition!!</div>
          </div>
        </div>
      </div>

      <div class="grid pt-5" style="margin: 0 auto;">
        <% @videos.each do |video| %>
            <div class="grid-item mb-4 video-card card" style="width: 20rem;">
              <figure class="figure">
                <a href="https://www.youtube.com/embed/<%=video.video_id%>?controls=0?controls=0" data-vbtype="video" data-autoplay="true" class="venobox">
                  <%= image_tag "http://img.youtube.com/vi/#{video.video_id}/hqdefault.jpg", class: 'card-img-top figure-img img-fluid', alt: 'Video Cap' %>
                  <div class="text-center"><%= fa_icon "youtube-play", class: 'faYoutubePlayIcon' %></div>
                  <figcaption class="figure-caption"></figcaption>
                </a>
              </figure>
              <div class="card-block mt-0 pt-0">
                <h5 class="text-center"><%=video.title%></h5>
                <p class="card-text text-justify p-2"><%=video.description%><span class="d-sm-none d-lg-block"></span></p>
              </div>
            </div>
        <% end %>
      </div>

      <div class="mb-3">&nbsp;</div>

    </div>
  </div>
</div>
