<style>
  body {
    background-color: rgba(255, 255, 255, 1);
  }
  @media screen {
    .certificate-img {
      display:block;
      height: 80%;
      width: auto;
    }
  }
  @media print {
    .certificate-img {
      display:block;
      height: auto;
      width: auto;
    }
    .hide {
      visibility:hidden;
    }
  }
</style>

<div class="justify-content-center text-center">
  <div class="pt-1">
    <h2 class="hide"><a href="#" onclick="window.print();">Print Certificate <%= fa_icon "print" %></a></h2>
    <%= image_tag("data:image/png;base64,#{@certificate}", alt:"Food eTalk Completion Certificate", class: "certificate-img mx-auto d-block align-self-center img-fluid") %>
  </div>
</div>

<script language="JavaScript">
    $(document).on("turbolinks:load", function() {
        window.print();
    });
</script>
