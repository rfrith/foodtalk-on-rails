<style>
  @media print{
    .print{
      display:block;
    }
    .hide {
      visibility:hidden;
    }
  }
</style>

<div class="justify-content-center text-center">
  <div class="pt-1">
    <h2 class="hide"><a href="#" onclick="window.print();">Print Certificate <%= fa_icon "print" %></a></h2>
    <div class="print">
      <%= image_tag("data:image/png;base64,#{@certificate}", alt:"Food eTalk Completion Certificate", class: "mx-auto d-block align-self-center") %>
    </div>
  </div>
</div>

<script language="JavaScript">
    $(document).on("turbolinks:load", function() {
        window.print();
    });
</script>
