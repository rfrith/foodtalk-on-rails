<% content_for :head do %>
  <meta property="fb:app_id" content="" />
  <meta property="og:url" content="<%= show_blog_url(@post['id'])%>" />
  <meta property="og:type" content="article" />
  <meta property="og:title" content="<%== ActionView::Base.full_sanitizer.sanitize @title %>" />
  <meta property="og:description" content="<%== ActionView::Base.full_sanitizer.sanitize @post["excerpt"]["rendered"] %>" />
  <meta property="og:image" content="<%= ActionView::Base.full_sanitizer.sanitize @featured_image %>" />
<% end %>

<div id="blog-post" class="content-section2">
  <%= render :partial => "shared/post_details" %>
</div>
