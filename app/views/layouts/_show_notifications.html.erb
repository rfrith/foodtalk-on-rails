<script language="JavaScript">
    $(document).on("turbolinks:load", function() {
        iziToast.destroy();

        <% if @notifications %>

          <% @notifications.each do |n| %>
          iziToast.info({
              title: '<%= n.title %>',
              message: '<%= n.message.html_safe %>',
              target: '#notifications',
              timeout: <%= n.timeout %>
          });
          <% end %>
        <% end %>
    });
</script>